# Server Configuration
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://aryanbhattarai020.github.io

# Database Configuration
# For demo deployments on platforms with ephemeral storage, SQLite will reset on redeploys.
# For production, migrate to Postgres and set DATABASE_URL accordingly.
DATABASE_URL=sqlite:./database/finetrack.db

# JWT Configuration
JWT_SECRET=change-me-in-production
JWT_EXPIRES_IN=7d

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# AI/ML Configuration
OPENAI_API_KEY=
AI_MODEL=gpt-3.5-turbo

# OCR Configuration
TESSERACT_PATH=

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
